{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": false
        }
      }
    ],
    "assets": [
      {
        "include": "**/mail/templates/**/*",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}
